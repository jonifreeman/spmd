#!/bin/sh

# Finding the root folder for this spmd
SPMD_DIR=`dirname $0`/..

# FIXME should be lib/spmd-0.1.jar
SPMD_JAR=$SPMD_DIR/target/classes

# Start spmd if it is not running
DAEMONS=`ps acx | grep -i spmd | wc -l`
if [ $DAEMONS -lt "1" ]; then
  $SPMD_DIR/bin/spmd &
  sleep 1
fi

ARGS=$@

while [ $# -gt 0 ]; do
    case $1 in
	-cp)
	    CP="$2"
	    shift; shift
	    ;;
	*)
	    shift
	    ;;
    esac
done

scala -cp "$SPMD_JAR":"$CP" -Denv.classpath="$CLASSPATH":"$SPMD_JAR":"$CP" spmd.Console $ARGS
