#!/bin/sh

# Finding the root folder for this spmd
SPMD_DIR=`dirname $0`/..

# FIXME should be lib/spmd-0.1.jar
SPMD_JAR=$SPMD_DIR/target/classes

# Start spmd if it is not running
DAEMONS=`ps --no-headers -C spmd | wc -l`
if [ $DAEMONS -lt "1" ]; then
  $SPMD_DIR/bin/spmd &
fi

scala -cp "$SPMD_JAR" -Denv.classpath="$CLASSPATH":"$SPMD_JAR" spmd.Console "$@"
